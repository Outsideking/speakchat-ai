// SCanzaclip Android Sample App - MainActivity.kt package com.scanzaclip.app

import android.os.Bundle import androidx.appcompat.app.AppCompatActivity import android.widget.Button import android.widget.EditText import android.widget.TextView

class MainActivity : AppCompatActivity() {

override fun onCreate(savedInstanceState: Bundle?) {
    super.onCreate(savedInstanceState)
    setContentView(R.layout.activity_main)

    val inputMsg = findViewById<EditText>(R.id.inputMsg)
    val sendBtn = findViewById<Button>(R.id.sendBtn)
    val chatView = findViewById<TextView>(R.id.chatView)

    sendBtn.setOnClickListener {
        val message = inputMsg.text.toString()
        val response = SCanzaclipAPI.sendChatMessage(message)
        chatView.append("You: $message\nBot: $response\n")
        inputMsg.text.clear()
    }
}

}

